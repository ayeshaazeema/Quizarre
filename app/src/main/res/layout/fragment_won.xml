<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_won"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.WonFragment">

    <ImageView
        android:id="@+id/iv_won"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_marginTop="150dp"
        android:contentDescription="@string/imageview"
        android:src="@drawable/won"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/blue" />

    <TextView
        android:id="@+id/tv_won"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/congratulations"
        android:textColor="@color/main"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_won"
        app:layout_constraintStart_toStartOf="@+id/iv_won"
        app:layout_constraintTop_toBottomOf="@+id/iv_won" />

    <TextView
        android:id="@+id/tv_won_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/won_message"
        android:textColor="@color/gray"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_won"
        app:layout_constraintStart_toStartOf="@+id/tv_won"
        app:layout_constraintTop_toBottomOf="@+id/tv_won" />

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_shape_round"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/continue_"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_won_message"
        app:layout_constraintStart_toStartOf="@+id/tv_won_message"
        app:layout_constraintTop_toBottomOf="@+id/tv_won_message" />
</androidx.constraintlayout.widget.ConstraintLayout>